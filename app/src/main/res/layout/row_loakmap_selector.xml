<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_margin="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingBottom="10dp">
            <ImageView
                android:id="@+id/imgBarang"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:src="@drawable/recycling"/>
            <TextView
                android:id="@+id/namaSampah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgBarang"
                android:text="Sampah Plastik"
                android:fontFamily="@font/poppinsbold"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/jarakSampah"
                android:layout_below="@id/namaSampah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jarak : - Km"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="15dp"/>
        </RelativeLayout>
        
    </androidx.cardview.widget.CardView>

</RelativeLayout>